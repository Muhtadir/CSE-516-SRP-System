<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cse.cu.srpsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".gui.DashboardCommon"/> -->
        <activity
            android:name=".gui.DashboardExamController"
            android:label="Dashboard - E.C." />
        <activity
            android:name=".gui.DashboardTeacher"
            android:label="Dashboard - Teacher" />
        <activity
            android:name=".gui.DashboardStudent"
            android:label="Dashboard - Student" />
        <activity
            android:name=".gui.ResultViewActivity"
            android:label="Result" />
    </application>

</manifest>